{
  "compilerOptions": {
    // other compiler options...
    "esModuleInterop": true,
    "module": "CommonJS", // "module": "CommonJS" should work too
    "moduleResolution": "Node",
    "resolveJsonModule":true
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}